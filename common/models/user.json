{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "properties": {
    "nickName": {
      "type": "string"
    },
    "avatarUrl": {
      "type": "string"
    },
    "stauts": {
      "type": "number",
      "default": 0
    },
    "createdAt": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "authors": {
      "type": "hasMany",
      "model": "article",
      "foreignKey": "authorId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
